{{#section 'head'}}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.min.js"></script>
{{/section}}

	<script id="nurseryRhymeTemplate" type="text/x-handlebars-template">
	Marry had little <b>\{{animal}}</b>, its <b>\{{bodyPart}}</b> was <b>\{{adjective}}</b> as <b>\{{noun}}</b>.
	</script>
	
	<div class='panel panel-default'><div class="panel-body" id="nurseryRhyme">Click a button...</div></div>
	<hr>
	<button class="btn btn-default" id="btnNurseryRhyme">Generate nursery rhyme</button>
	<button class="btn btn-default" id="btnNurseryRhymeAjax">Generate nursery rhyme from AJAX</button>

{{#section 'jquery'}}
	<script>
		$(document).ready(function() {
			var nurseryRhymeTemplate = Handlebars.compile($('#nurseryRhymeTemplate').html());

			var $nurseryRhyme = $('#nurseryRhyme');

			$('#btnNurseryRhyme').click(function(evt) {
				evt.preventDefault();
				$nurseryRhyme.html(nurseryRhymeTemplate({
					animal: 'basilik',
					bodyPart: 'tail',
					adjective: 'sharp',
					noun: 'a needle'
				}));
			});

			$('#btnNurseryRhymeAjax').click(function(evt) {
				evt.preventDefault();
				$.ajax('/data/nursery-rhyme', {
					success: function(data) {
						$nurseryRhyme.html(nurseryRhymeTemplate(data));
					}
				})
			})
		});
	</script>
{{/section}}